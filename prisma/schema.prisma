// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model products {
  id       Int      @id @default(autoincrement())
  category String
  name     String
  en_category String
  en_name String
  jp_category String
  jp_name String
  price    Float
}

model users {
  id           Int       @id @default(autoincrement())
  username     String    @unique
  hashPassword String
  role         Int
}
